{
  "private": true,
  "prisma": {
    "schema": "packages/database/schema.prisma"
  },
  "scripts": {
    "build": "turbo build",
    "db:migrate:dev": "turbo run db:migrate:dev",
    "db:migrate:deploy": "turbo run db:migrate:deploy",
    "dev": "turbo dev",
    "go": "turbo run go --concurrency 20",
    "lint": "turbo lint",
    "clean": "turbo run clean && rimraf node_modules .turbo out",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "pre-commit": "lint-staged"
  },
  "devDependencies": {
    "@ossgg/tsconfig": "workspace:*",
    "eslint": "^8.56.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "rimraf": "^5.0.5",
    "turbo": "latest"
  },
  "lint-staged": {
    "(apps|packages)/**/*.{js,ts,jsx,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.json": [
      "prettier --write"
    ],
    "packages/database/schema.prisma": [
      "prisma format"
    ]
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "packageManager": "pnpm@8.6.10"
}
